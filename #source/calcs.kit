    <section class="section-outer section-calcs">
      <div class="section-inner section-calcs__container">
        <div class="section-calcs__calc-list">
          <div class="calc-list__title">
            <h3>Калькулятор полного максимума</h3>
          </div>
          <div class="calc-list__text">
            <h3>
              Калькулятор полного максимума рассчитывает вес штанги, который
              человек теоретически может поднять в одном повторении, если
              известно, какой вес он поднимает в определённом количестве
              повторений.
            </h3>
          </div>
          <div class="calc-list__body">
            <div class="variable">
              <span>Вес штанги(кг)</span>
              <input type="number" id="w" />
            </div>
            <div class="variable">
              <span>Количество повторений</span>
              <input type="number" id="r" />
            </div>

            <button class="result-button calc1" id="calc1">Рассчитать</button>

            <div class="results">
              <span>Максимальное повторение:</span>
              <div class="result">
                <span>по формуле Бжицки:</span>
                <input disabled id="res1" />
              </div>
              <div class="result">
                <span>по формуле Эйпли:</span>
                <input disabled id="res2" />
              </div>
              <div class="result">
                <span>по формуле Лэндера:</span>
                <input disabled id="res3" />
              </div>
            </div>

            <script>
              function add1(w, r) {
                return Math.round(w / (1.0278 - 0.0278 * r));
              }
              function add2(w, r) {
                return Math.round(w * (1 + r / 30));
              }
              function add3(w, r) {
                return Math.round((100 * w) / (101.3 - 2.67123 * r));
              }
              function buttonMaxWeightClick() {
                let addResult1 = add1(+w.value, +r.value);
                res1.value = addResult1;
                let addResult2 = add2(+w.value, +r.value);
                res2.value = addResult2;
                let addResult3 = add3(+w.value, +r.value);
                res3.value = addResult3;
              }
              calc1.onclick = buttonMaxWeightClick;
            </script>
          </div>
        </div>
      </div>
    </section>
